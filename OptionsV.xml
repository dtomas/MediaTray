<?xml version='1.0'?>
<options>
    <section title='Layout'>
      <hbox>
        <frame label='Separators'>
          <toggle name='separator_left' label='Top'/>
          <toggle name='separator_right' label='Bottom'/>
        </frame>
        <frame label='Main Menu'>
          <radio-group name='menus'>
  	        <radio label='Top' value='3'/>
            <radio label='Bottom' value='4'/>
          </radio-group>
        </frame>
      </hbox>
      <frame label='Size'>
        <numentry name='icon_size_max' label='Maximum icon size:' min='16' max='96' step='8'/>
      </frame>
      <frame label='Appearance'>
        <toggle name='effects' label='Enable visual effects'/>
      </frame>
    </section>
    <section title='Windows'>
      <frame label='Behaviour'>
        <toggle name='all_workspaces' label='Show all workspaces'/>
        <toggle name='arrow' label='Show arrow for volumes with more than one open window'/>
      </frame>
    </section>
    <section title='Pinboard Icons'>
      <vbox>
        <toggle label='Show icons on the pinboard' name='pin'/>
        <hbox>
          <hbox>
            <radio-group name='pin_x'>
              <radio label='Left' value='-1'></radio>
              <radio label='Right' value='-2'></radio>
            </radio-group>
          </hbox>
          <vbox>
            <radio-group name='pin_y'>
              <radio label='Top' value='-1'></radio>
              <radio label='Bottom' value='-2'></radio>
            </radio-group>
          </vbox>
        </hbox>
      </vbox>
    </section>
    <section title='Automount'>
      <radio-group name='automount'>
          <radio label='No automatic mounting' value='0'></radio>
          <radio label='Mount volume when inserted' value='1'></radio>
          <radio label='Open volume when inserted' value='2'></radio>
      </radio-group>
    </section>
    <section title='Notifications'>
      <toggle name='show_notifications' label='Show notifications about added/removed volumes.'/>
    </section>
</options>
